{
  "name": "@cmdcode/buff-utils",
  "type": "module",
  "version": "1.11.8",
  "description": "Cross-platform library for working with buffers and moving between formats.",
  "author": "Christopher Scott",
  "license": "CC-BY-1.0",
  "keywords": [
    "bytes",
    "buffer",
    "bech32",
    "base58",
    "base64",
    "convert"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/cmdruid/buff-utils.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "files": [
    "README.md",
    "LICENSE",
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/module.mjs"
      },
      "require": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/main.cjs"
      }
    }
  },
  "types": "./dist/types/index.d.ts",
  "main": "./dist/main.cjs",
  "unpkg": "./dist/browser.js",
  "scripts": {
    "build": "yarn clean && yarn types && yarn rollup",
    "clean": "rm -rf dist/* coverage .nyc_output",
    "scratch": "tsx test/scratch.ts",
    "lint": "eslint . --ext .ts",
    "fix": "eslint --fix . --ext .ts",
    "rollup": "rollup -c rollup.config.ts --configPlugin typescript",
    "tape": "tsx test/index.ts",
    "test": "nyc --reporter=lcov yarn tape | tap-spec; nyc report ---reporter=text",
    "types": "tsc",
    "release": "yarn test && yarn lint && yarn build"
  },
  "devDependencies": {
    "@noble/curves": "^1.1.0",
    "@noble/hashes": "^1.3.0",
    "@rollup/plugin-commonjs": "^23.0.7",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^9.0.2",
    "@scure/base": "^1.1.1",
    "@types/node": "^18.17.0",
    "@types/tape": "^4.13.4",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.46.0",
    "eslint-config-standard-with-typescript": "^26.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "nyc": "^15.1.0",
    "rollup": "^3.27.0",
    "tap-spec": "^5.0.0",
    "tape": "^5.6.6",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6"
  }
}

{
  "name": "@cmdcode/buff-utils",
  "type": "module",
  "version": "1.1.7",
  "description": "Cross-platform utility library for working with byte-arrays and moving between formats.",
  "author": "Christopher Scott",
  "license": "CC-BY-1.0",
  "keywords": [
    "bytes",
    "buffer",
    "bech32",
    "base58",
    "base64",
    "convert"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/cmdruid/bytes-utils.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "files": [
    "README.md",
    "LICENSE",
    "dist"
  ],
  "main": "dist/main.js",
  "unpkg": "dist/bundle.min.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    "import": "./dist/module.js",
    "require": "./dist/main.js"
  },
  "scripts": {
    "build": "rollup -c rollup.config.ts --configPlugin typescript",
    "clean": "rm -rf dist/* coverage .nyc_output",
    "dev": "node --loader ts-node/esm --no-warnings test/scratch.ts",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts",
    "tape": "node --loader ts-node/esm --no-warnings test/index.test.js",
    "test": "nyc --reporter=lcov --require ts-node/register yarn tape | tap-spec; nyc report ---reporter=text",
    "types": "tsc",
    "release": "yarn clean && yarn types && yarn lint && yarn build && yarn test"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-json": "^5.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^9.0.2",
    "@types/tape": "^4.13.2",
    "@typescript-eslint/eslint-plugin": "*",
    "buffer": "^6.0.3",
    "camelcase": "^7.0.0",
    "eslint": "*",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "*",
    "eslint-plugin-import": "*",
    "eslint-plugin-n": "*",
    "eslint-plugin-promise": "*",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "rollup": "^3.2.3",
    "rollup-plugin-terser": "^7.0.2",
    "tap-spec": "^5.0.0",
    "tape": "^5.6.1",
    "ts-node": "^10.9.1",
    "typescript": "*"
  }
}
